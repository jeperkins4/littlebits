!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
      %title= content_for?(:title) ? yield(:title) : "What's Up? - StatusTLH"
      %meta{:charset => 'utf-8'}
      %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
      %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Whats Up?'}"}
      = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
      %script{src: 'https://www.google.com/jsapi'}
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      = csrf_meta_tags
      = action_cable_meta_tag
      = content_for?(:head) ? yield(:head) : ""
  %body
    .container
      .masthead
        %a{href: '/'}
          .logo-container
            %img{src: image_url('littlebits-logo.svg'), alt: 'Littlebits logo' }.lb-logo
            .extra-tag
      %header
        = render 'layouts/navigation'
      %main{:role => "main"}
        = render 'layouts/messages'
        = yield
      %footer
